        </Console>
    </Appenders>

    <loggers>
        <logger name = "java.sql.PreparedStatement" level = "DEBUG" additivity="false">
                <appender-ref ref = "console" />
        </logger>
        <logger name = "java.sql.PreparedStatement" level = "DEBUG" additivity="false">
            <appender-ref ref = "console" />
            </logger>

        <logger name = "java.sql.ResultSet" level = "trace" additivity="false">
        <appender-ref ref = "console" />
